<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="OnboardingButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginTop">@dimen/button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_vertical</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="OnboardingButton.Primary">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <style name="OnboardingButton.Secondary">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <style name="OnboardingButton.Transparent">
        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="OnboardingButton.Social">
        <item name="android:background">@drawable/btn_social_fade</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="OnboardingTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="OnboardingSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
    </style>

    <style name="OnboardingLink">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_link</item>
        <item name="android:textColor">@color/text_link</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:background">@drawable/btn_transparent</item>
        <item name="android:padding">@dimen/spacing_medium</item>
    </style>
</resources>
